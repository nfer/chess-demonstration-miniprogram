<view class="section__full" style="height: {{aspect * 100}}vw;">
  <BgCanvas class="section__image section__absolute" style="z-index: 0;"></BgCanvas>
  <CursorCanvas class="section__image section__absolute" pos="{{cursorPos}}" style="z-index: 1;"></CursorCanvas>
  <canvas type="2d" class="section__image section__absolute" id="itemCanvas" bindtap="selectItem" style="z-index: 2;"></canvas>
</view>

<ChessSteps steps="{{nowSteps}}" isError="{{isError}}"></ChessSteps>

<view class="section__btns">
  <button class="section__btn" type="default" bindtap="revert" disabled="{{nowSteps.length === 0}}">悔棋</button>
  <button class="section__btn" type="warn" bindtap="reload">重来</button>
</view>