<!--components/ChessSteps.wxml-->
<view wx:if="{{isShow}}" class="section__steps {{isError ? 'section__steps-error' : ''}}">
  <scroll-view wx:if="{{steps.length}}" scroll-y="true" scroll-top="{{steps.length * 30}}" scroll-with-animation="true">
    <view wx:for="{{steps}}" wx:for-item="item" wx:key="Id" wx:for-index="idx" class="step-line">
      <text class="step-idx">{{idx + 1}}.</text>
      <text class="step-normal">{{item[0]}}</text>
      <text class="step-normal">{{item[1]}}</text>
      <text class="step-normal">{{item[2]}}</text>
      <text class="step-normal">{{item[3]}}</text>
    </view>
  </scroll-view>
</view>